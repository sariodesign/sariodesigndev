---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="theme-light js-page">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Roboto+Serif:opsz,wght@8..144,700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="js-body">
		<Header />
		<slot />
		<button class="btn-menu js-btn-menu">
			<svg id="icon-menu" viewBox="0 0 24 24">
					<path d="M3 13h18c0.552 0 1-0.448 1-1s-0.448-1-1-1h-18c-0.552 0-1 0.448-1 1s0.448 1 1 1zM3 7h18c0.552 0 1-0.448 1-1s-0.448-1-1-1h-18c-0.552 0-1 0.448-1 1s0.448 1 1 1zM3 19h18c0.552 0 1-0.448 1-1s-0.448-1-1-1h-18c-0.552 0-1 0.448-1 1s0.448 1 1 1z"></path>
			</svg>
		</button>
		<Footer />
	</body>
</html>
<style is:global  lang="scss">
	:root {
		--dark-black: #102020;
		--light-gray: #eee;
		--white: #fff;
		--orange: #DD7A4C
	}

	* {
		box-sizing: border-box;
	}

	html {
		overflow-x: hidden;

		&.is-locked {
			overflow-y: hidden;
		}
	}
	body {
		font-family: 'Roboto Mono', monospace;
		font-size: 16px;
		margin: 0;
		overflow-x: hidden;

		.is-locked & {
			overflow-y: hidden;
		}
	}

	main {
		align-items: center;
		display: flex;
		justify-content: center;
	}

	h1 {
		font-family: 'Roboto Serif', serif;
	}
	@media (prefers-color-scheme: dark) {
		html {
			background-color: var(--dark-black);
		}
	}

	@media (prefers-color-scheme: light) {
		html {
			background-color: var(--light-gray);
		}
	}

	@media screen and (min-width: 768px) {
		main {
			min-height: 100vh;
		}
	}

	.btn-menu {
    border: 0;
    bottom: 16px;
    border-radius: 50%;
    box-shadow: 0 5px 15px -5px rgba(0,0,0,0.5);
    height: 48px;
    position: fixed;
    right: 16px;
    width: 48px;
    z-index: 2;
    @media screen and (min-width: 768px) {
        display: none;
    }

    @media (prefers-color-scheme: light) {
        background-color: var(--dark-black);

        svg {
            height: 24px;
            fill: var(--orange);
            width: 24px;
        }
    }
	}
</style>
