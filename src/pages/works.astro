---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro." metaDescription="">
	<main class="work-main">
		<div class="project-name">A list of my side project</div>
		<ul class="projects-list">
			<li>Project 01</li>
			<li>Project 02</li>
			<li>Project 03</li>
			<li>Project 04</li>
			<li>Project 05</li>
			<li>Project 06</li>
		</ul>
	</main>
</Layout>

<style>
	.header {
		transform: translateY(0);
	}

	.work-main {
		justify-content: space-between;
		padding: 100px 1rem 0;
	}

	.project-name {
		align-self: start;
		font-size: 2rem;
		margin-bottom: 1rem;
	}
	.projects-list {
		list-style: none;
		padding: 0;
		margin: 0;

		li {
			font-size: 1.5rem;
			padding: .25rem 0;
			&:hover {
				color: var(--orange);
			}
		}
	}
</style>
