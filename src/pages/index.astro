---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SarioDesign Front-end developer - Personal website" metaDescription="Rosario Russo Front-end developer personal website">
	<main>
		<h1 id="intro">I'm Rosario Russo also known as SarioDesign<br> Front-end & UI Developer <br>currently based in <span class="evidence">Tuscany</span></h1>
	</main>
</Layout>

<script>
	import { gsap } from 'gsap'
	import SplitType from 'split-type'

	const Intro = new SplitType('#intro')
	
	gsap.from('.char', {
		opacity: 0,
		stagger: 0.05,
		delay: 0,
		duration: .0125,
	})

	gsap.to('.header', {
		y: 0,
		opacity: 1,
		stagger: 0.05,
		delay: 0.1,
		duration: .5
	})

	gsap.to('.footer', {
		y: 0,
		opacity: 1,
		stagger: 0.05,
		delay: 0.2,
		duration: .5
	})
</script>

<style is:global>
	h1 {
		color: #fff;
		font-size: clamp(1.75rem, 4vw, 3rem);
		line-height: clamp(2.5rem, 4vw, 4.5rem);
		margin: 0;
		opacity: 1;
		text-align: center;
		transition: opacity .15s;
	}

	@media (prefers-color-scheme: dark) {
		h1 {
			color: #fff
		}
	}
	@media (prefers-color-scheme: light) {
		h1 {
			color: var(--dark-black);
		}
	}
	.evidence {
		color: var(--orange);
		z-index: -1;
	}

	.header {
		opacity: 0;
		position: fixed;
		transform: translateY(-50px);
		transition: all .15s;
	}

	main {
		min-height: 100vh;
	}

	.footer,
	.btn-menu {
		opacity: 0;
		transform: translateY(50px);
		transition: all .15s;
	}
	
</style>
