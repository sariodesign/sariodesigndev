

<div class="menu-icon js-menu-icon">
	<svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
		<rect x="16" y="16" width="32" height="6" rx="2" />
		<rect x="12" y="29" width="40" height="6" rx="2" />
		<rect x="16" y="42" width="32" height="6" rx="2" />
	</svg>
</div>

<style>
	.menu-icon {
		margin-left: auto;
	}

	@media screen and (min-width: 768px) {
		svg {
			display: none;
		}
	}

	@media (prefers-color-scheme: dark) {
		svg {
			fill: var(--light-gray) 
		}
	}

	@media (prefers-color-scheme: light) {
		svg {
			fill: var(--dark-black) 
		}
	}
</style>

<script>
	const menu = document.querySelector('.js-menu');
	const btnIconMenu = document.querySelector('.js-menu-icon');
	
	btnIconMenu.addEventListener('click', () => {
		menu.classList.add('is-opened')
	})
</script>