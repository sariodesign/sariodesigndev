---
import Logo from '../components/Logo.astro';
import MenuIcon from './MenuIcon.astro';
import Navigation from '../components/Navigation.astro';
---

<header class="header">
	<Logo />
	<MenuIcon />
	<Navigation />
</header>

<style>
	.header {
		align-items: center;
		display: flex;
		justify-content: space-between;
		padding: 32px 16px;
		width: 100%;
	}
	
	@media screen and (min-width: 768px) {
		.header {
			left: 0;
			margin-bottom: 0;
			position: fixed;
			top: 0;
		}
	}
</style>